+alias org.eolang.io.stdout
+alias org.eolang.txt.sprintf


# is year leap?
[args] > main
  [y] > leap
    or. > @
      and.
        eq. (mod. y 4) 0
        not. (eq. (mod. y 100) 0)
      eq. (mod. y 400) 0
  stdout > @
    sprintf
    "%d is %sa leap year!"
    (args.get 0).as-int > year!
    if. (leap year:y) "" not "\n"
