{
  "name": "eo",
  "version": "0.0.0",
  "publisher": "eolang",
  "displayName": "EO",
  "description": "A language extension for the EO Programming Language. Provides syntax highlighting and parsing error checking.",
  "author": "Eduardo Fernandes, Anatoliy Baskakov, Roman Nabiullin",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/objectionary/eo-vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "eo",
    "eolang"
  ],
  "engines": {
    "vscode": "^1.63.0",
    "node": ">=16.0.0"
  },
  "activationEvents": [
    "onLanguage:eo"
  ],
  "main": "./client/out/extension",
  "icon": "icons/cactus-128.png",
  "contributes": {
    "languages": [
      {
        "id": "eo",
        "aliases": [
          "EO",
          "eo"
        ],
        "extensions": [
          ".eo"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/cactus-128.png",
          "dark": "./icons/cactus-128.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "eo",
        "scopeName": "source.eo",
        "path": "./syntaxes/eo.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "fetch-and-build-grammar": "cd server && npm run get-grammar && npm run build-parser && cd ..",
    "convert-yaml": "npx js-yaml syntaxes/eo.tmLanguage.yaml > syntaxes/eo.tmLanguage.json",
    "unit-test": "cd server && npm run build-parser && cd .. && npm run compile && jest",
    "end-to-end-test": "sh ./scripts/e2e.sh",
    "generate-docs": "npx typedoc"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.28.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "mocha": "^9.2.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.8.4",
    "vsce": "^2.13.0"
  }
}
