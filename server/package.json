{
    "name": "eo-vscode-server",
    "description": "Language Server for a syntax highlighter for the EO Language",
    "version": "1.0.0",
    "author": "Eduardo Fernandes, Anatoliy Baskakov, Roman Nabiullin",
    "license": "MIT",
    "engines": {
        "node": ">=16.0.0",
        "vscode": "^1.63.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/objectionary/eo-vscode"
    },
    "dependencies": {
        "antlr4": "^4.11.0",
        "antlr4ts": "^0.5.0-alpha.4",
        "vscode-languageserver": "^8.0.0",
        "vscode-languageserver-textdocument": "^1.0.4"
    },
    "scripts": {
        "get-grammar": "curl https://raw.githubusercontent.com/objectionary/eo/refs/tags/0.58.6/eo-parser/src/main/antlr4/org/eolang/parser/Eo.g4 > resources/Eo.g4",
        "build-parser": "antlr4ts -visitor resources/Program.g4 && mv resources/*.ts src/parser"
    },
    "devDependencies": {
        "@types/vscode": "^1.63.0",
        "antlr4ts-cli": "^0.5.0-alpha.4"
    }
}
